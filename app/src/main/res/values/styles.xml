<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="sublimePickerStyle">@style/SPDefaultImpl</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <!-- TabLayout 标题样式 -->
  <style name="TabLayoutAppearance">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="recyclerViewStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:overScrollMode">ifContentScrolls</item>
    <item name="android:scrollbarStyle">outsideOverlay</item>
    <item name="android:fadingEdge">vertical</item>
    <item name="android:scrollbars">vertical</item>
  </style>

  <style name="gankImg">
    <item name="android:layout_width">68dp</item>
    <item name="android:layout_height">@dimen/gank_item_content_height</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>

  <style name="gankItem">
    <item name="android:paddingLeft">19dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="gankTitle">
    <item name="android:textColor">#151515</item>
    <item name="android:textSize">14sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="todayTitle">
    <item name="android:textColor">#333333</item>
    <item name="android:textSize">14sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:layout_marginLeft">8dp</item>
  </style>

  <style name="todayTitleBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:layout_width">4dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Text">
    <item name="android:lineSpacingExtra">3dp</item>
    <item name="android:lineSpacingMultiplier">0.8</item>
  </style>

  <style name="GankContent" parent="Text">
    <item name="android:textColor">#B7BFDA</item>
    <item name="android:textSize">12sp</item>
  </style>

  <!-- toolbar 标题样式 -->
  <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="CollapsingToolbarTitleStyle"
      parent="@android:style/TextAppearance">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="SPDefaultImpl" parent="SublimePickerStyleLight">
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:textColorPrimary">#212121</item>
    <item name="android:textColorSecondary">#727272</item>
    <item name="android:textColorPrimaryInverse">#FFFFFF</item>
  </style>

</resources>
